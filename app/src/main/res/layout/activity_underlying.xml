<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UnderlyingActivity">

    <CheckBox
        android:id="@+id/asthmaBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:width="122dp"
        android:height="60dp"
        android:fontFamily="casual"
        android:textSize="12dp"
        android:text="\nAsthma\n"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <CheckBox
        android:id="@+id/cardiovascularBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:width="130dp"
        android:height="60dp"
        android:fontFamily="casual"
        android:textSize="12dp"
        android:text="\nCardiovascular\ndisease"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/chronicLungBox"
        app:layout_constraintStart_toEndOf="@+id/asthmaBox"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <CheckBox
        android:id="@+id/chronicLungBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:width="122dp"
        android:height="60dp"
        android:fontFamily="casual"
        android:textSize="12dp"
        android:text="\nChronic lung\ndisease"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <CheckBox
        android:id="@+id/immuneBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="55dp"
        android:width="122dp"
        android:height="60dp"
        android:fontFamily="casual"
        android:textSize="12dp"
        android:text="\nImmune\nsuppression"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/asthmaBox" />

    <CheckBox
        android:id="@+id/metabolicBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:width="130dp"
        android:height="60dp"
        android:fontFamily="casual"
        android:textSize="12dp"
        android:text="\nDiabetes\n"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/neurologicBox"
        app:layout_constraintStart_toEndOf="@+id/immuneBox"
        app:layout_constraintTop_toBottomOf="@+id/cardiovascularBox" />

    <CheckBox
        android:id="@+id/neurologicBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="15dp"
        android:width="122dp"
        android:height="60dp"
        android:fontFamily="casual"
        android:textSize="12dp"
        android:text="\nNeurologic\ndisease"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chronicLungBox" />

    <CheckBox
        android:id="@+id/otherBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="55dp"
        android:width="122dp"
        android:height="60dp"
        android:fontFamily="casual"
        android:textSize="12dp"
        android:text="\nOther\ndisease"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/immuneBox" />

    <CheckBox
        android:id="@+id/autoimmuneBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:width="130dp"
        android:height="60dp"
        android:fontFamily="casual"
        android:textSize="12dp"
        android:text="\nAutoimmune\ndisease "
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/obesityBox"
        app:layout_constraintStart_toEndOf="@+id/otherBox"
        app:layout_constraintTop_toBottomOf="@+id/metabolicBox" />

    <CheckBox
        android:id="@+id/obesityBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="15dp"
        android:width="122dp"
        android:height="60dp"
        android:fontFamily="casual"
        android:textSize="12dp"
        android:text="\nObesity\n"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/neurologicBox" />

    <CheckBox
        android:id="@+id/pregnancyBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="55dp"
        android:width="122dp"
        android:height="60dp"
        android:fontFamily="casual"
        android:textSize="12dp"
        android:text="\nPregnancy\n"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otherBox" />

    <CheckBox
        android:id="@+id/renalBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:width="130dp"
        android:height="60dp"
        android:fontFamily="casual"
        android:textSize="12dp"
        android:text="\nRenal\ndisease"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/gastrointestinalBox"
        app:layout_constraintStart_toEndOf="@+id/pregnancyBox"
        app:layout_constraintTop_toBottomOf="@+id/autoimmuneBox" />

    <CheckBox
        android:id="@+id/gastrointestinalBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="15dp"
        android:width="122dp"
        android:height="60dp"
        android:fontFamily="casual"
        android:textSize="12dp"
        android:text="\nGastrointestinal\nliver disease"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/obesityBox" />

    <CheckBox
        android:id="@+id/hypertensionBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:width="130dp"
        android:height="60dp"
        android:fontFamily="casual"
        android:text="\nHypertension\n"
        android:textAlignment="center"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/gastrointestinalBox"
        app:layout_constraintStart_toStartOf="@+id/pregnancyBox"
        app:layout_constraintTop_toBottomOf="@+id/renalBox" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="179dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="174dp"
        android:fontFamily="casual"
        android:text="Select underlying disease"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/sendRequestArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxWidth="80dp"
        android:maxHeight="80dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/right" />

    <ImageButton
        android:id="@+id/backToMainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxWidth="80dp"
        android:maxHeight="80dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/left" />


</androidx.constraintlayout.widget.ConstraintLayout>